<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--============= Castle Building Base =================-->

  <ThingDef  Name="CaslteBase" ParentName="BuildingBase" Abstract="True">
    <designationCategory>Structure</designationCategory>
    <passability>Impassable</passability>
    <pathCost>0</pathCost>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>200</costStuffCount>
    <fertility>0</fertility>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
    <building>
      <isInert>true</isInert>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
      <drawOffset>(0,0,0.4)</drawOffset>
      <drawRotated>true</drawRotated>
      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <canOverlapZones>false</canOverlapZones>
	<size>(2,2)</size>
    <!--uiIconPath>RWEmbrasureIcon</uiIconPath-->
	<defaultPlacingRot>South</defaultPlacingRot>
  </ThingDef>

	<!--==============================================
	================ Castle Walls ===================
	===============================================-->

  <ThingDef ParentName="CaslteBase">
    <defName>JDS_WallsTwo</defName>
    <label>Castle Walls 1x2</label>
    <description>Medieval builders used a number of techniques to strengthen walls, for example building them thicker at the base to prevent undermining, and cutting the stones in such a way as to be able to withstand high impact projectiles</description>
    <altitudeLayer>Building</altitudeLayer>
    <blockWind>true</blockWind>
    <fillPercent>1</fillPercent>
    <costStuffCount>100</costStuffCount>
    <statBases>
      <Mass>200</Mass>
      <MaxHitPoints>1200</MaxHitPoints>
      <WorkToBuild>6000</WorkToBuild>
      <Beauty>5</Beauty>
    </statBases>
    <rotatable>true</rotatable>
    <graphicData>
      <texPath>Things/Walltwo</texPath>
    </graphicData>
	<size>(1,2)</size>
  </ThingDef>

